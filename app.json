{
  "name": "network-pulse-api",
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "REDIRECT_URIS": {
      "required": true
    },
    "client_id": {
      "required": true
    },
    "client_secret": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_S3_CUSTOM_DOMAIN": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_STORAGE_BUCKET_NAME": {
      "required": true
    },
    "AWS_STORAGE_ROOT": {
      "required": true
    },
    "USE_S3": "True",
    "SSL_PROTECTION": "False",
    "CORS_ORIGIN_ALLOW_ALL": "True",
    "DEBUG": "True"
  },
  "addons": [
    "heroku-postgresql:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "python manage.py load_fake_data && python manage.py review_app_admin"
  }
}
